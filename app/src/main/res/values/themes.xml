<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TextbookReader" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/secondary</item>
        <item name="colorPrimaryVariant">@color/secondary</item>
        <item name="colorOnPrimary">@color/primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/secondary</item>
        <!-- Customize your theme here. -->
        <item name="android:textSize">20dp</item>
        <item name="fontFamily">@font/ubuntu_medium</item>
    </style>

    <style name="normalFont">
        <item name="android:fontFamily">@font/ubuntu_medium</item>
        <item name="android:textColor">@color/secondary</item>

    </style>
</resources>